version: '3.8'

networks:
  {{ logging_network_name }}:
    driver: bridge

services:
  loki:
    image: grafana/loki:latest
    container_name: {{ loki_container_name }}
    ports:
      - "{{ loki_port }}:3100"
    volumes:
      - {{ loki_data_dir }}:/loki
    command: -config.file=/etc/loki/local-config.yaml
    networks:
      - {{ logging_network_name }}
    restart: always

  promtail:
    image: grafana/promtail:latest
    container_name: {{ promtail_container_name }}
    depends_on:
      - {{ loki_container_name }}
    volumes:
      - /var/log:/var/log:ro
      - "{{ promtail_config_path }}:/etc/promtail/promtail-config.yml:ro"
      - "{{ docker_log_path }}:/var/lib/docker/containers:ro"
    command: -config.file=/etc/promtail/promtail-config.yml
    restart: always
    networks:
      - {{ logging_network_name }}

volumes:
  loki_data:

